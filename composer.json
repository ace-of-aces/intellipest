{
    "version": "0.1.0",
    "name": "ace-of-aces/intellipest",
    "description": "Generate IDE helpers to assist development with PestPHP",
    "authors": [
        {
            "name": "Julian Schramm",
            "email": "hi@julian.center"
        }
    ],
    "license": "MIT",
    "minimum-stability": "stable",
    "type": "library",
    "require": {
        "php": "^8.3",
        "symfony/console": "^7.4",
        "nikic/php-parser": "^5.7",
        "react/event-loop": "^1.6"
    },
    "require-dev": {
        "pestphp/pest": "^4.3",
        "laravel/pint": "^1.27",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "AceOfAces\\IntelliPest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/intellipest"
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint --test --parallel",
        "format": "pint --parallel",
        "test": "pest",
        "analyze": "phpstan analyze",
        "test:all": [
            "@lint",
            "@test",
            "@analyze"
        ],
        "test:update-fixtures": "./tests/bin/update-fixtures"
    }
}
